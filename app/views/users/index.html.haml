%h3= t(:users)
.span8
  %table.table.table-condensed
    %thead
      %tr
        %th= t(:username)
        %th= t(:email)
        %th= t(:registered)
        %th= t(:role)
        %th
        %th
    %tbody
      - @users.each do |user|
        %tr
          %td= link_to user.name, user
          %td= user.email
          %td= user.created_at.to_date
          %td= user.roles.first.name.titleize unless user.roles.first.nil?
          %td
            %a.btn.btn-mini{"data-toggle" => "modal", :href => "#role-options-#{user.id}", :type => "button"}= t(:change_role)
            = render user
          %td= link_to(t(:delete_user), user_path(user), :data => { :confirm => t(:confirm_msg) }, :method => :delete, :class => 'btn btn-mini') unless user == current_user
